<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FrotaVivaMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/secondary_default</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="CustomMapDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="Theme.FrotaVivaMobile" parent="Base.Theme.FrotaVivaMobile" />

    <style name="ThemeOverlay.FrotaVivaMobile.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>